
@{
    ViewBag.Title = "GetDetails";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp" crossorigin="anonymous">
<div align="center">
    <h1 class="display-3">Fill Details</h1>
    <br/>

    <form action="/Booking/BookFlight" method="post">
        <div style="margin-left:40%">
            <div class="input-group mb-3">
                <Label class="input-group-text" style="text-align:center">Select Source: </Label>
                @Html.DropDownList("Source", new SelectList(ViewBag.Beginning),"Select")
            </div>

            <div class="input-group mb-3">
                <Label class="input-group-text">Select Destination: </Label>
                @Html.DropDownList("Destination", new SelectList(ViewBag.Dest), "Select")
            </div>

            <div class="input-group mb-3">
                <Label class="input-group-text">Select Date: </Label>
                <input name="Date" type="date" id="Date" required>
            </div>
        </div>
        <div>
            <div>
                @Html.ValidationMessage("notfound")
            </div>
            <input type="submit" align="center" value="Find" class="btn btn-primary">
            <input type="reset" name="backButton" id="backButton" value="Reset" class="btn btn-primary">
        </div>
    </form>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js" integrity="sha384-qKXV1j0HvMUeCBQ+QVp7JcfGl760yU08IQ+GpUo5hlbpg51QRiuqHAJz8+BrxE/N" crossorigin="anonymous"></script>




