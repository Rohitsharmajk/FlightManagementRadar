@model FlightManagementRadar.Models.User_Details

@{
    ViewBag.Title = "SignUp";
}

<div>

    <h2 class="display-3">SignUp</h2>

    <p class="display-8">Please Enter the UserName and Password of your Choice</p>
    @Html.ValidationSummary()
    @using (Html.BeginForm("SignUp", "Account"))
    {
        <div>
            @Html.LabelFor(m => m.username, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.username, new { @class = "form-control", autocomplete = "off" })
            <div style="color:red">
                @Html.ValidationMessageFor(m => m.username)
                @Html.ValidationMessage("usernameExists")
            </div>
        </div>
        <div>
            @Html.LabelFor(m => m.password, new { @class = "form-label" })
            @Html.PasswordFor(m => m.password, new { @class = "form-control", autocomplete = "off" })
            <div style="color:red">
                @Html.ValidationMessageFor(m => m.password)
            </div>
        </div>

        <div>
            @Html.Label("Confirm Password", new { @class = "form-label" })
            @Html.Password("confirmpass", "", new { @class = "form-control", autocomplete = "off" })
        </div>
        <div style="color:red">
          
            @Html.ValidationMessage("notsame")
        </div>
        <button type="submit" class="btn btn-primary" style="margin-top:1rem; margin-bottom:1rem;">SignUp</button>
    }

    <p>Already a User? LogIn 👇</p>
    <p><a href="/Account/LogIn" class="btn btn-primary">Login </a></p>
</div>